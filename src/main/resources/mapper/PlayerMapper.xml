<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dailystudy.jogi_golf.mapper.PlayerMapper">

    <select id="getHandicapByPlayerName" parameterType="string" resultType="int">
        SELECT handicap FROM players WHERE player_name = #{playerName}
    </select>

    <update id="updateHandicap">
        UPDATE players SET handicap = handicap + #{adjustment} WHERE player_name = #{playerName}
    </update>

    <insert id="insertPlayer">
        INSERT INTO players (player_name, handicap)
        VALUES (#{playerName}, #{handicap})
    </insert>
</mapper>
